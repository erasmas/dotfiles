# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below. ISO 10646 = Unicode
font pango:Menlo, FontAwesome 9

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec xfce4-terminal --hide-menubar --hold

# Shift+q - kill focused window
bindcode $mod+Shift+24 kill

# d - start dmenu (a program launcher)
bindcode $mod+40 exec --no-startup-id i3-dmenu-desktop --dmenu="xboomx"

# Shift+d - choose a running program
bindcode $mod+Shift+40 exec --no-startup-id quickswitch.py --dmenu="dmenu -b -i -z -l 20 -fn 'Menlo-9' -nb '#073642' -nf '#eee8d5' -sb '#268bd2'"

# change focus (j, k, l, ;)
bindcode $mod+44 focus left
bindcode $mod+45 focus down
bindcode $mod+46 focus up
bindcode $mod+47 focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window (j, k, l, ;)
bindcode $mod+Shift+44 move left
bindcode $mod+Shift+45 move down
bindcode $mod+Shift+46 move up
bindcode $mod+Shift+47 move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# h - split in horizontal orientation
bindcode $mod+43 split h

# v - split in vertical orientation
bindcode $mod+55 split v

# f - enter fullscreen mode for the focused container
bindcode $mod+41 fullscreen

# change container layout (stacked, tabbed, toggle split) (s, e, w)
bindcode $mod+39 layout stacking
bindcode $mod+25 layout tabbed
bindcode $mod+26 layout toggle split

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# a - focus the parent container
bindcode $mod+38 focus parent

# switch to workspace
bindsym $mod+1 workspace 
bindsym $mod+2 workspace 
bindsym $mod+3 workspace 
bindsym $mod+4 workspace 
bindsym $mod+5 workspace 
bindsym $mod+6 workspace 
bindsym $mod+7 workspace 7
bindsym $mod+8 workspace 8
bindsym $mod+9 workspace 9
bindsym $mod+0 workspace 10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace 
bindsym $mod+Shift+2 move container to workspace 
bindsym $mod+Shift+3 move container to workspace 
bindsym $mod+Shift+4 move container to workspace 
bindsym $mod+Shift+5 move container to workspace 
bindsym $mod+Shift+6 move container to workspace 
bindsym $mod+Shift+7 move container to workspace 7
bindsym $mod+Shift+8 move container to workspace 8
bindsym $mod+Shift+9 move container to workspace 9
bindsym $mod+Shift+0 move container to workspace 10

# Shift+c - reload the configuration file
bindcode $mod+Shift+54 reload
# Shift+r - restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindcode $mod+Shift+27 restart
# Shift+o - exit i3 (logs you out of your X session)
bindcode $mod+Shift+32 exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
    # These bindings trigger as soon as you enter the resize mode

    # Pressing left will shrink the window’s width.
    # Pressing right will grow the window’s width.
    # Pressing up will shrink the window’s height.
    # Pressing down will grow the window’s height.
    bindcode 44 resize shrink width 10 px or 10 ppt
    bindcode 45 resize grow height 10 px or 10 ppt
    bindcode 46 resize shrink height 10 px or 10 ppt
    bindcode 47 resize grow width 10 px or 10 ppt

    # same bindings, but for the arrow keys
    bindsym Left resize shrink width 10 px or 10 ppt
    bindsym Down resize grow height 10 px or 10 ppt
    bindsym Up resize shrink height 10 px or 10 ppt
    bindsym Right resize grow width 10 px or 10 ppt

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}

# r
bindcode $mod+27 mode "resize"

# x
bindcode $mod+53 [urgent=latest] focus

# Shift+p - shutdown menu
bindcode $mod+Shift+33 exec xfce4-session-logout
# Shift+s - xfce settings
bindcode $mod+Shift+39 exec xfce4-settings-manager
# Shift+v - sound device menu
bindcode $mod+Shift+55 exec pavucontrol
# Shift+w - random wallpaper
bindcode $mod+Shift+25 exec --no-startup-id feh --recursive --randomize --bg-fill ~/Dropbox/Pictures/wallpapers

# Control+e - Emacs
bindcode $mod+Control+26 exec --no-startup-id emacs
# Control+i - Intellij Idea
bindcode $mod+Control+31 exec --no-startup-id intellij-idea-ultimate-edition
# Control+f - ranger
bindcode $mod+Control+41 exec --no-startup-id xfce4-terminal --hide-menubar --hold -e ranger
# Control+c - Conkeror
bindcode $mod+Control+54 exec --no-startup-id conkeror
# Control+t - Corebird
bindcode $mod+Control+28 exec --no-startup-id corebird
# Control+m - Skype
bindcode $mod+Control+58 exec --no-startup-id skype
# Control+g - Geary
bindcode $mod+Control+42 exec --no-startup-id geary
# Control+d - Deadbeef
bindcode $mod+Control+40 exec --no-startup-id deadbeef
# Control+l - Liferea
bindcode $mod+Control+46 exec --no-startup-id liferea

# Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad
# Show the first scratchpad window
bindsym $mod+minus scratchpad show

workspace_auto_back_and_forth yes

new_window 1pixel

# class                 border  backgr. text    indicator
client.focused          #268bd2 #268bd2 #fdf6e3 #6c71c4
client.focused_inactive #2aa198 #2aa198 #fdf6e3 #484e50
client.unfocused        #073642 #073642 #fdf6e3 #484e50
client.urgent           #2f343a #900000 #ffffff #900000

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    status_command i3blocks
    position       top
    colors {
        # solarized
        background #002b36
        statusline #eee8d5
        focused_workspace  #002b36 #002b36 #268bd2
        active_workspace   #002b36 #002b36 #268bd2
        inactive_workspace #002b36 #002b36 #586e75
        urgent_workspace   #dc322f #dc322f #586e75
    }
}

focus_follows_mouse no

# App → workspace assignments
assign [class="Emacs"] → 
assign [class="jetbrains-idea"] → 
assign [class="Conkeror"] → 
assign [class="Corebird"] → 
assign [class="Liferea"] → 
assign [class="Skype"] → 
assign [class="Geary"] → 
assign [class="Deadbeef"] → 

# xfce4-notify
for_window [class="Xfce4-notifyd"] floating enable;border none; focus mode_toggle

exec_always compton -CGb
