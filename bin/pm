#!/bin/sh -

lock() {
    $HOME/bin/suspend_notifications
    i3lock-wrapper -n
    setxkbmap -option ctrl:nocaps,grp:switch,grp:shifts_toggle us,ua
    $HOME/bin/resume_notifications
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        i3-msg exit
        ;;
    suspend)
        i3lock-wrapper && systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|reboot|shutdown}"
        exit 2
esac

exit 0