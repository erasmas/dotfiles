separator_block_width=8
separator=false

[mpd current track]
command=/usr/lib/i3blocks/mediaplayer/mediaplayer
instance=mpd
interval=1
signal=10
color=#B48EAD

[keyboard layout indicator]
command=echo $(xkb-switch | sed -r 's/us/Eng/g;s/ua/Ukr/g')
interval=1
color=#88C0D0

[memory]
command=/usr/lib/i3blocks/memory/memory
separator=false
interval=10
color=#D08770

[datetime]
command=echo $(date '+%d/%m/%Y %H:%M')
interval=5
color=#5E81AC
