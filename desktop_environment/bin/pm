#!/bin/sh -

lock() {
    betterlockscreen -l dimblur
    setxkbmap -option ctrl:nocaps,grp:switch,grp:shifts_toggle us,ua
}

case "$1" in
    lock)
        lock
        ;;
    logout)
        xfce4-session-logout
        ;;
    suspend)
        systemctl suspend
        ;;
    reboot)
        systemctl reboot
        ;;
    shutdown)
        systemctl poweroff
        ;;
    *)
        echo "Usage: $0 {lock|logout|suspend|reboot|shutdown}"
        exit 2
esac

exit 0
